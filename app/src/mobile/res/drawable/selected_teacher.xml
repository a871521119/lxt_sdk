<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false">
        <shape>
            <corners android:radius="@dimen/y340" />

            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="@dimen/x10"
                android:top="@dimen/y20"
                android:right="@dimen/x10"
                android:bottom="@dimen/y20"
                />
            <!-- 描边 -->
            <stroke
                android:dashWidth="@dimen/x10"
                android:width="@dimen/x4"
                android:color="@android:color/black" />
        </shape>　

    </item>

    <item android:state_checked="true"  >
        <shape>
            <corners android:radius="@dimen/y340" />
            <!-- padding：Button里面的文字与Button边界的间隔 -->
            <padding
                android:left="@dimen/x10"
                android:top="@dimen/x10"
                android:right="@dimen/x10"
                android:bottom="@dimen/x10"
                />
            <!-- 描边 -->
            <stroke
                android:width="@dimen/x1"
                android:color="@android:color/holo_green_dark" />
        </shape>
    </item>

</selector>