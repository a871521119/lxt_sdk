<?xml version="1.0" encoding="utf-8"?>
<!--最外层 上下布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"

>
    <include layout="@layout/base_title_layout"
        android:id="@+id/title"
        />
    <EditText
        android:id="@+id/feedback_edittext"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:layout_margin="@dimen/x20"
        android:background="@drawable/bg_feelback"
        android:gravity="top"
        android:hint="@string/set_leave_a_message"
        android:lines="8"
        android:padding="20dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textSize="15sp"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_margin="@dimen/x20"
                  android:layout_weight="1">

        <TextView android:id="@+id/feedback_submitbut" android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_marginTop="@dimen/x20"
                  android:background="@drawable/btn_blubg"
                  android:clickable="true"
                  android:gravity="center"
                  android:text="提交"
                  android:textColor="@color/white"
                  android:textSize="18sp"/>


    </LinearLayout>


</LinearLayout>