<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <include
        android:id="@+id/title"
        layout="@layout/base_title_layout"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y400"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/x10"
                android:background="@mipmap/icon_head_bg"
                >

                <ImageView
                    android:id="@+id/background_modified_image"
                    android:layout_width="@dimen/x200"
                    android:layout_height="@dimen/x200"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/x10"
                    android:src="@mipmap/default_head_bg"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/self_updata_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    style="@style/default_textStyle_colorblack"
                    android:layout_centerVertical="true"
                    android:text="@string/selfInfo_englist_name"
                    />

                <TextView
                    android:id="@+id/self_name"
                    style="@style/default_textStyle_colorgray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/icon_back_right"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/erro_textColor2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/self_updata_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    style="@style/default_textStyle_colorblack"
                    android:layout_centerVertical="true"
                    android:text="@string/selfInfo_sex"
                    />

                <TextView
                    android:id="@+id/self_sex"
                    style="@style/default_textStyle_colorgray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/icon_back_right"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/erro_textColor2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    style="@style/default_textStyle_colorblack"
                    android:layout_centerVertical="true"
                    android:text="@string/selfInfo_phoneNO"
                    />

                <TextView
                    android:id="@+id/self_phoneNo"
                    style="@style/default_textStyle_colorgray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x10"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/erro_textColor2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/self_updata_email"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    style="@style/default_textStyle_colorblack"
                    android:layout_centerVertical="true"
                    android:text="@string/selfInfo_email"
                    />

                <TextView
                    android:id="@+id/self_email"
                    style="@style/default_textStyle_colorgray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/icon_back_right"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/erro_textColor2"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/self_updata_birthday"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x100"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    style="@style/default_textStyle_colorblack"
                    android:layout_centerVertical="true"
                    android:text="@string/selfInfo_birthday"
                    />

                <TextView
                    android:id="@+id/self_birthday"
                    style="@style/default_textStyle_colorgray"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/x10"
                    android:drawableRight="@mipmap/icon_back_right"
                    android:gravity="center"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/erro_textColor2"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
