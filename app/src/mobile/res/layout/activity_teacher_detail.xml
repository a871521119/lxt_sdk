<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    >
    <include layout="@layout/base_title_layout"
        android:id="@+id/teacher_detail_title"/>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        >
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll"
                android:fitsSystemWindows="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_scrollFlags="enterAlwaysCollapsed"
                    >
                    <!--头像-->
                    <ImageView
                        android:id="@+id/teacher_head"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x140"
                        android:layout_marginTop="@dimen/y40"
                        android:layout_marginLeft="@dimen/x40"
                        android:background="@mipmap/order_teacher_normal_image"/>
                    <!--性别、年龄-->
                    <TextView
                        android:id="@+id/age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/teacher_head"
                        android:drawableLeft="@mipmap/man_icon"
                        android:drawablePadding="@dimen/x10"
                        android:text="年龄：23"
                        android:layout_marginTop="@dimen/y10"
                        android:layout_marginLeft="@dimen/x40"
                        android:textSize="@dimen/x22"

                        />
                    <LinearLayout
                        android:id="@+id/teacherInfo"
                        android:layout_toRightOf="@id/teacher_head"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginTop="@dimen/y25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <!--星级 -->
                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="0.5"
                            android:clickable="false"
                            style="?android:attr/ratingBarStyleSmall"
                            android:progressTint="@color/Yellow"
                            />
                        <!--姓名 -->
                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            />
                        <!--教学经验 -->
                        <TextView
                            android:id="@+id/work"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            />
                        <!--认证资格 -->
                        <TextView
                            android:id="@+id/type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            />
                        <!--来自 -->
                        <TextView
                            android:id="@+id/from"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/y10"
                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/x40"
                        android:layout_marginTop="@dimen/y30"
                        android:drawableTop="@mipmap/kongxin_xin"
                        android:drawablePadding="@dimen/x10"
                        />
                    <TextView
                        android:id="@+id/introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/teacherInfo"
                        android:layout_margin="@dimen/x30"
                        android:text="测试测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测测试测试测试测试测试测试测试测试测试测试测试测试"
                        />
                    <ImageView
                        android:id="@+id/expandImage"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y20"
                        android:src="@mipmap/teacher_down"
                        android:layout_below="@id/introduce"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/y10"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y30"
                        android:layout_marginTop="@dimen/y5"
                        android:background="#eee"
                        android:layout_below="@id/expandImage"
                        ></View>
                </RelativeLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <com.lxt.mobile.widget.ToolbarHorizontalScrollView
                android:id="@+id/navTitleToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="@color/white"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/navTitleRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                </android.support.v7.widget.RecyclerView>
            </com.lxt.mobile.widget.ToolbarHorizontalScrollView>
        </android.support.design.widget.AppBarLayout>
        <!-- 第三部分:Your Scroll View-->

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/myMainScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="always"
            android:background="@color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <!--- app:layout_behavior="@string/appbar_scrolling_view_behavior"-->
            <com.lxt.mobile.widget.ToolbarHorizontalScrollView
                android:id="@+id/navContentToolBar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/navTimeRecycler"
                    android:layout_marginTop="@dimen/y10"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                </android.support.v7.widget.RecyclerView>
            </com.lxt.mobile.widget.ToolbarHorizontalScrollView>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>