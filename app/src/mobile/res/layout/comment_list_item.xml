<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/stu_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/defalt_circle_img"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/stu_img">
            <TextView
                android:id="@+id/stu_name"
                android:text="Mary"
                android:textSize="14sp"
                android:lines="1"
                android:maxEms="7"
                android:ellipsize="end"
                android:textColor="#000"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_comment_time"
            android:text="one hour ago"
            android:textColor="#ADADAD"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/ll_comment_star"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_below="@+id/stu_name"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"/>
        <TextView
            android:id="@+id/tv_comment_content"
            android:layout_below="@+id/ll_comment_star"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>