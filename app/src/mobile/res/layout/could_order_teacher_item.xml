<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/could_order_teacher_RelativeLayout"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/could_order_teacher_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"/>
        <!--<ImageView-->
        <!--android:layout_width="90dp"-->
        <!--android:layout_height="90dp"-->
        <!--android:layout_margin="10dp"-->
        <!--android:id="@+id/could_order_teacher_head"/>-->

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignTop="@+id/could_order_teacher_head"
            android:layout_alignRight="@+id/could_order_teacher_head"
            android:id="@+id/red_xin"
            android:src="@mipmap/red_xin"
            android:contentDescription="@string/ImageDes"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/could_order_teacher_RelativeLayout"
        android:layout_alignBottom="@+id/could_order_teacher_RelativeLayout"
        android:layout_toRightOf="@+id/could_order_teacher_RelativeLayout"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical"
            android:gravity="center">
            <!--swb2017.1.24-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/order_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fercel"
                    android:textColor="@color/black"
                    android:paddingBottom="2dp"
                    android:textSize="15sp" />
                <LinearLayout
                    android:id="@+id/order_teacher_age_linear"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_teacher_name"
                    android:gravity="center|left">
                    <TextView
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_in_class_age"
                        android:textColor="#A9A9A9"/>
                    <TextView
                        android:id="@+id/order_teacher_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:textSize="9sp"
                        android:textColor="#A9A9A9"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/order_teacher_country_linear"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_teacher_age_linear"
                    android:gravity="center|left">
                    <TextView
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/notice_in_class_from"
                        android:textColor="#A9A9A9"/>
                    <TextView
                        android:id="@+id/order_teacher_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:textColor="#A9A9A9"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:id="@+id/ll_time_for_course"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_teacher_country_linear">
                    <TextView
                        android:text="上课时间："
                        android:textSize="9sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A9A9A9"/>
                    <TextView
                        android:textSize="9sp"
                        android:id="@+id/tv_order_time"
                        android:maxLines="2"
                        android:paddingBottom="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#A9A9A9"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.3"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_order_teacher_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/attention_text_color"
                android:textSize="15sp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <View
                android:id="@+id/line"
                android:background="@color/notice_in_class_the_divider_color"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:gravity="center">

            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_order"
                android:background="@drawable/yuyue_button_background"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:focusable="false"
             >
                <TextView
                    android:text="@string/to_make_an_appointment"
                    android:textSize="20sp"
                    android:textColor="#77b82a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>