<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/select_background"
    android:gravity="center">
    <LinearLayout
        android:id="@+id/popwindow_linear2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/y30"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="筛选条件:"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/x20"
            android:textColor="#fff"/>
        <RadioGroup
            android:id="@+id/sexRadioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="不限男女"
                android:gravity="center"
                android:paddingTop="@dimen/y12"
                android:paddingBottom="@dimen/y12"
                android:paddingLeft="@dimen/x20"
                android:paddingRight="@dimen/x20"
                android:background="@drawable/selected_teacher"
                android:textColor="@drawable/white_and_green_btn"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="男"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:paddingTop="@dimen/y12"
                android:paddingBottom="@dimen/y12"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@drawable/selected_teacher"
                android:textColor="@drawable/white_and_green_btn"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="女"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:paddingTop="@dimen/y12"
                android:paddingBottom="@dimen/y12"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:background="@drawable/selected_teacher"
                android:textColor="@drawable/white_and_green_btn"/>
        </RadioGroup>
    </LinearLayout>

    <CheckBox
        android:id="@+id/shoucang"
        android:layout_width="@dimen/x230"
        android:layout_height="@dimen/y76"
        android:text="收藏的老师"
        android:layout_marginTop="@dimen/y28"
        android:layout_below="@+id/popwindow_linear2"
        android:textSize="12sp"
        android:gravity="center"
        android:button="@null"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/white_and_green_btn"
        android:background="@drawable/selected_teacher"/>
    <Button
        android:id="@+id/sizer"
        android:layout_width="@dimen/x232"
        android:layout_height="@dimen/y76"
        android:text="筛选"
        android:layout_below="@+id/shoucang"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/y20"
        android:textSize="12sp"
        android:textColor="#fff"
        android:background="@drawable/green_circle_back"
        android:layout_marginBottom="@dimen/y60"/>
</RelativeLayout>