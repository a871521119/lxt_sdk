<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    android:orientation="vertical">


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232121"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y100"
            android:baselineAligned="false"
            android:background="@drawable/bg_dialog_selcet_time"
            android:orientation="horizontal">
            <!--swb2017.1.24-->
            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SET  TIME:"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x20"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <!--android:elegantTextHeight="true"  下面textview的属性  支持版本小swb2017.1.23-->
            <TextView
                android:id="@+id/tv_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/centain_shape"
                android:gravity="center"
                android:paddingLeft="@dimen/x40"
                android:paddingRight="@dimen/x40"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x20"
                android:text="确认"
                android:textColor="#77B82A"
                android:textSize="20sp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y20"
            android:orientation="horizontal"
            android:background="#232121">
            <com.lxt.mobile.widget.timePacker.DatePicker
                android:id="@+id/dp_test"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:textSize="15sp"/>

            <com.lxt.mobile.widget.timePacker.TimePicker
                android:id="@+id/tp_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y10"
                android:gravity="center"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>