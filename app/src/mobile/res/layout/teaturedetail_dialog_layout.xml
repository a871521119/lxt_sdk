<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"

    >

    <include
        android:id="@+id/title"
        layout="@layout/base_title_layout"/>
    <!--第一部分，头像姓名-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/x60"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="1.3"
            android:background="@mipmap/icon_head_bg"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >

                <ImageView
                    android:id="@+id/teature_headView"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/x120"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/defalt_circle_img"
                    />
            </RelativeLayout>

            <!--姓名和教学经验-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:background="#6000"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                >

                <TextView
                    android:id="@+id/teature_name"
                    style="@style/default_textStyle_colorblack"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="姓名 miss"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x20"
                    />

                <TextView
                    android:id="@+id/teature_level"
                    style="@style/default_textStyle_colorblack"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="教学经验:2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x20"
                    />
            </RelativeLayout>
        </LinearLayout>
        <!--第二部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:animateLayoutChanges="true"
            android:background="@drawable/gragboder_dialog"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x20"
            android:paddingRight="@dimen/x20"
            >

            <LinearLayout
                android:id="@+id/teature_rl1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x240"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x100"
                    >

                    <TextView
                        android:id="@+id/teature_status"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x60"
                        android:gravity="center"
                        android:text="认证资格："
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/teature_from"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x60"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:text="来自："
                        android:textColor="@color/black"
                        />
                    <!--放星五角星的ImageView-->
                    <LinearLayout
                        android:id="@+id/teature_star_lay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        >
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x140"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:id="@+id/evaluateTagLayout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:gravity="center_horizontal"
                        >

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_standardPronunciation"
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_HightLevelOfAppearance"
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_HasPatience"
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_ChineseFluency"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/evaluateTagLayoutSecond"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x60"
                        android:layout_below="@id/evaluateTagLayout"
                        android:gravity="center_horizontal"
                        >

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text=" 有  趣 "
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_enthusiasm"
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_atFullCock"
                            />

                        <CheckBox
                            style="@style/evaluateTagStyle"
                            android:clickable="false"
                            android:focusable="false"
                            android:text="@string/appraise_voiceGood"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none"
                >

                <TextView
                    android:id="@+id/teature_info"
                    style="@style/default_textStyle_colorblack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="sdasdasdasdasdsad"
                    />
            </ScrollView>

            <RelativeLayout
                android:id="@+id/teature_up"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/icon_up"
                    />


            </RelativeLayout>


        </LinearLayout>
        <!--第三部分-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/x50"
            android:paddingTop="@dimen/x50"
            >

            <TextView
                android:id="@+id/teature_cacelWatch"
                style="@style/default_textStyle_colorblack"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_blubg"
                android:clickable="true"
                android:paddingBottom="@dimen/x20"
                android:paddingLeft="@dimen/x100"
                android:paddingRight="@dimen/x100"
                android:paddingTop="@dimen/x20"
                android:text="取消关注"
                android:textColor="@color/white"

                />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>