<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">



    <RelativeLayout
        android:layout_width="@dimen/x460"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/user_bg"
        android:layout_marginTop="@dimen/y20"
        android:layout_marginBottom="@dimen/y20"
        >

        <ImageView
            android:layout_margin="@dimen/x20"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/x90"
            android:background="@drawable/bitmap_copy"
            android:layout_centerHorizontal="true"
            android:id="@+id/user_img"
            />

        <TextView
            android:id="@+id/user_name"
            android:text="Lius"
            style="@style/personalCenterStyle"
            android:layout_below="@id/user_img"
            />

        <TextView
            android:id="@+id/user_sex"
            style="@style/personalCenterStyle"
            android:layout_below="@id/user_name"
            />

        <TextView
            android:id="@+id/user_phone"
            style="@style/personalCenterStyle"
            android:text="13623635162"
            android:layout_below="@id/user_sex"
         />
        <TextView
            android:id="@+id/user_email"
            style="@style/personalCenterStyle"
            android:text="2521789866@qq.com"
            android:maxLength="25"
            android:ellipsize="end"
            android:layout_below="@id/user_phone"
           />

        <TextView
            android:id="@+id/user_birthday"
            style="@style/personalCenterStyle"
            android:layout_below="@id/user_email"
             />

        <Button
            android:focusable="true"
            android:id="@+id/exit_button_id"
            android:textColor="#fff"
            android:background="@drawable/bg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/y10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="@string/exit"/>

    </RelativeLayout>


</LinearLayout>