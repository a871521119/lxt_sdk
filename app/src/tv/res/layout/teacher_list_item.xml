<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@drawable/blue_bg"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical">
            <!--<com.example.administrator.tv_weiyuyanstudent.View.RoundedImageView1-->
            <!--android:layout_width="180dp"-->
            <!--android:layout_height="175dp"-->
            <!--android:id="@+id/photo_album_entry1"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_centerHorizontal="true" />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1.8">
                <!--<ImageView-->
                <!--android:layout_width="100dp"-->
                <!--android:layout_height="100dp"-->
                <!--android:id="@+id/teacher_item_img"-->
                <!--/>-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|top"
                    android:layout_weight="3.6">
                    <ImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:id="@+id/teacher_item_img"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:paddingRight="20dp"
                android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/start_img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape"
                    android:visibility="invisible"
                />
                <ImageView
                    android:id="@+id/start_img2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape"
                    android:visibility="invisible"
                />
                <ImageView
                    android:id="@+id/start_img3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape"
                    android:visibility="invisible"
                />
                <ImageView
                    android:id="@+id/start_img4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape"
                    android:visibility="invisible"
                />
                <ImageView
                    android:id="@+id/start_img5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/shape"
                    android:visibility="invisible"
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:paddingRight="20dp"
                android:layout_weight="0.3">
                <ImageView
                    android:id="@+id/teacher_item_sex_img"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/girl"/>
                <TextView
                    android:id="@+id/teacher_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avril Lavigne"
                    android:gravity="center"
                    android:textSize="13sp"
                    android:textColor="#fff"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:paddingRight="20dp"
                android:layout_weight="1">
                <TextView
                    android:layout_below="@+id/teacher_item_sex_linear"
                    android:id="@+id/teacher_item_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="11sp"
                    android:layout_marginRight="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:text="事实上事实上事实上谁谁谁谁谁谁水水水水水水水水事实上事实上事实上谁谁谁谁谁谁水水水水水水水水"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingLeft="20dp"
                android:gravity="center|left"
                android:paddingRight="20dp"
                android:layout_weight="0.3">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/address_img"
                />
                <TextView
                    android:id="@+id/teacher_item_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State of California,  USA"
                    android:textColor="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="10sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center|bottom"
                android:orientation="horizontal"
                android:layout_weight="0.6">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/teacher_item_yuyue_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="预约"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:focusable="true"
                    android:background="@drawable/yuyue_btn2"
                    android:paddingTop="5dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="5dp"
                />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>