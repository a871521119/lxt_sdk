<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ImageView
        android:id="@+id/image_course"
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200"
        android:background="@drawable/baidi"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x22"
            android:layout_marginLeft="@dimen/x20"
            android:padding="@dimen/x10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="雅思英语"
            android:layout_marginTop="@dimen/y20"
            />

        <TextView
            android:id="@+id/expiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x20"
            android:gravity="center"
            android:paddingTop="@dimen/x8"
            android:paddingBottom="@dimen/x8"
            android:layout_marginLeft="@dimen/x30"
            android:layout_gravity="center|left"/>

        <TextView
            android:id="@+id/yuyue_bespeakno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30/60"
            android:textSize="@dimen/x20"
            android:layout_marginLeft="@dimen/x30"
            android:paddingTop="@dimen/x8"
            android:drawableLeft="@drawable/stokre"
            android:drawablePadding="@dimen/x10"
            android:paddingBottom="@dimen/x8"
            android:layout_gravity="center|left"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/guoqi"
        android:layout_width="@dimen/x200"
        android:layout_height="@dimen/x200"
        android:background="@drawable/bg_bookclasstag"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginBottom="@dimen/y120"
        android:layout_gravity="bottom|right"
        android:visibility="gone" />

</FrameLayout>