<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- 公有弹出框样式 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 登录输入框样式 -->
    <style name="LoginEditText">
        <item name="android:layout_width">@dimen/x400</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:layout_marginTop">@dimen/y40</item>
        <item name="android:background">@drawable/btn_wihtestroke</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">@dimen/x10</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <!--首页顶部导航 -->
    <style name="NavigationBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_navigation</item>
        <item name="android:drawablePadding">@dimen/x6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x22</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:layout_marginRight">@dimen/x12</item>
    </style>
    <!--个人中心 -->
    <style name="personalCenterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x22</item>
        <item name="android:layout_marginTop">@dimen/y12</item>
        <item name="android:layout_marginLeft">@dimen/x30</item>
    </style>


    <!--评价星星 -->
    <style name="evaluateStarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:focusable">true</item>
        <item name="android:layout_margin">@dimen/x10</item>
        <item name="android:button">@null</item>
        <item name="android:checked">true</item>
        <item name="android:background">@drawable/course_record_start_bg</item>
    </style>

    <!--评价标签 -->
    <style name="evaluateTagStyle">
        <item name="android:layout_width">@dimen/x100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/x4</item>
        <item name="android:button">@null</item>
        <item name="android:padding">@dimen/x8</item>
        <item name="android:textColor">@color/textcolor</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/course_record_btn_bg</item>
        <item name="android:textSize">@dimen/x18</item>
        <item name="android:gravity">center</item>
    </style>

    <!--评价按钮 -->
    <style name="evaluateButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:background">@drawable/course_record_last_btn_bg</item>
        <item name="android:paddingLeft">@dimen/x40</item>
        <item name="android:paddingRight">@dimen/x40</item>
        <item name="android:paddingBottom">@dimen/x10</item>
        <item name="android:paddingTop">@dimen/x10</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

